<h2>Clubs</h2>

<% @clubs.each do |club| %>

<div class="club">
	<%= link_to image_tag(club.logo || "blank.gif"), (club.website || {:action => 'show', :id => club}) %>
	<h3><%= link_to (club.name || club.official_name), (club.website || {:action => 'show', :id => club})  %></h3>
	<span><%=h club.tagline || club.official_name || "Tagline" %></span>
	<ul>
	<% club.tags.each do |tag| %>
		<li><a href="#"><%= tag %></a></li>
	<% end if club.tags %>
	</ul>
	<% if club.affiliated %>
	<div class="affiliated"></div>
	<% end %>
</div>

<% end %>


