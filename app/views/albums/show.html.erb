<p>
  <b>Name:</b>
  <%=h @album.name %>
</p>

<p>
  <b>Desc:</b>
  <%=h @album.desc %>
</p>

<p>
  <b>Tags:</b>
  <%=h @album.tags %>
</p>

<p>
  <b>Locked:</b>
  <%=h @album.locked %>
</p>

<p>
  <b>Created by:</b>
  <%=h @album.user.name %>
</p>

<h2>Images in this Album</h2>
<% @album.images.each do |image| %>
  <p>
    <h3><%= link_to image.name, new_album_image_path(image) %></h3>
	<%= image_tag  "/club_data/" + image.album.club.name+"/"+image.album.name+"/"+image.url, :size => "100x100", :alt => image.desc, :title => image.desc %>
  </p>
  <hr>
<% end %>
<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Add Image', new_album_image_path(@album) %> |
<%= link_to 'Back', albums_path %>