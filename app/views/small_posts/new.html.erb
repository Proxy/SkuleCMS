<h1>New small_post</h1>

<% form_for([:club, @small_post], :url => {:action=> 'create'}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :content %><br />
    <%= f.text_area 	:content,
						:onKeyDown => "textCounter(this,this.form.remLen,200);", 
						:onKeyUp => "textCounter(this,this.form.remLen,200);" 
	%>
  </p>
  
Characters Left: <input readonly style="border: 0" type=text name=remLen size=3 maxlength=3 value="200"></input>


  <p>
    <%= f.submit 'Create' %>
	<%= f.submit 'Try a Large Post' %>
  </p>
<% end %>

