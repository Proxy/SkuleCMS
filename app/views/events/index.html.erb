<h2>Upcoming events</h2>

<table>
  <tr>
    <th>Event Name</th>
    <th>Start</th>
    <th>End</th>
    <th>Location</th>
    <th>Description</th>
    <th>Link</th>
  </tr>
<% @events.each do |event| %>
  <tr>
    <td><%=h event.name%></td>
    <td><%=h format_time(event.start) %></td>
    <td><%=h format_time(event.finish) %></td>
    <td><%=h event.location %></td>
    <td><%=h event.description %></td>
    <td><%=h event.link %></td>
    <td><%= link_to 'Show', :action => 'show', :id => event %></td>
  </tr>
<% end %>
</table>
<br/>
<% if !@old_events.blank? %>
	<h3>Old events</h3>
	<table>
	  <tr>
	    <th>Event Name</th>
	    <th>Start</th>
	    <th>End</th>
	    <th>Location</th>
	    <th>Description</th>
	    <th>Link</th>
	  </tr>
	<% @old_events.each do |event| %>
	  <tr>
	    <td><%=h event.name%></td>
	    <td><%=h format_time(event.start) %></td>
	    <td><%=h format_time(event.finish) %></td>
	    <td><%=h event.location %></td>
	    <td><%=h event.description %></td>
	    <td><%=h event.link %></td>
	    <td><%= link_to 'Show', :action => 'show', :id => event %></td>
	  </tr>
	<% end %>
	</table>
	<br />
<% end %>

<%= link_to 'ICal Format', :action => 'export_events', :club_id => @club %>
