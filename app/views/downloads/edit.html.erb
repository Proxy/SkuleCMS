<h2>Editing download</h2>

<% form_for(@download) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :download_folder_id %><br />
  	<%= f.collection_select :download_folder_id, DownloadFolder.find(:all), :id, :name, { :prompt => 'Select a Download Folder' } %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :desc, "Description" %><br />
    <%= f.text_field :desc %>
  </p>
  <p>
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </p>
  <p>
    <%= f.label :tags %><br />
    <%= f.text_field :tags %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', club_file_path(@download.download_folder.club, @download.download_folder) %>