<h2>New group</h2>

<% form_for([:club, @group], :url => {:action=> 'create'}) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :misc %><br />
    <%= f.text_area :misc %>
  </p>
  <p>
    <%= f.label :parent_id, "Subgroup of..." %><br />
    <%= f.collection_select :parent_id, @grouplist, :id, :name, { :prompt => 'Select a Group', :include_blank => 'None'} %>
  </p>
  <p>
  	<%= label_tag :page, "Create a Page for this Group" %>
  	<%= check_box_tag :page, :create_page %>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', :action => 'index' %>