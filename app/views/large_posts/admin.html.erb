<h1>Listing large_posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>

<% @large_posts.each do |large_post| %>
  <tr>
    <td><%=h large_post.title %></td>
    <td><%= large_post.content %></td>
    <td><%= link_to 'Show',  :action => 'admin', :club_id => @club, :id => large_post %></td>
    <td><%= link_to 'Edit',  :action => 'edit', :id => large_post %></td>
    <td><%= link_to 'Destroy', club_large_post_path(@club, large_post), :confirm => 'Are you sure?', :method => :delete %></td>

  </tr>
<% end %>
</table>

<br />

<%= link_to 'New large_post',  :action => 'new' %> |
<%= link_to 'Back',  club_admin_index_path(@club) %>
