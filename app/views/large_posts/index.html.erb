<h1>Listing large_posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
  </tr>

<% @large_posts.each do |large_post| %>
  <tr>
    <td><%=h large_post.title %></td>
    <td><%= large_post.content %></td>
    <td><%= link_to 'Show', large_post %></td>
    <td><%= link_to 'Edit', edit_large_post_path(large_post) %></td>
    <td><%= link_to 'Destroy', large_post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New large_post', new_large_post_path %>